<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="80dp"
    android:layout_marginLeft="12dp"
    android:gravity="left|top">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:elevation="1dp"
        app:cardCornerRadius="6dp">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Akhil"
                    android:paddingTop="-4dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/blue_grey_500"
                    android:id="@+id/messageName" android:layout_marginRight="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello"
                    android:textColor="@color/blue_grey_600"
                    android:id="@+id/messageView" android:layout_marginRight="50dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:52 AM"
                android:lines="1"
                android:id="@+id/timeView"
                android:textColor="@color/blue_grey_200"
                android:textSize="10dp"
                android:layout_gravity="bottom|right"/>
        </FrameLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>